{
    "root": true,

    "extends": "@ljharb",

    "rules": {
        "indent": [2, 4],
        "strict": 0,
        "complexity": 0,
        "consistent-return": 0,
        "curly": 0,
        "dot-notation": [2, { "allowKeywords": true }],
        "func-name-matching": 0,
        "func-style": 0,
        "global-require": 1,
        "id-length": [2, { "min": 1, "max": 30 }],
        "max-lines": [2, 350],
        "max-lines-per-function": 0,
        "max-nested-callbacks": 0,
        "max-params": 0,
        "max-statements-per-line": [2, { "max": 2 }],
        "max-statements": 0,
        "no-magic-numbers": 0,
        "no-shadow": 0,
        "no-use-before-define": 0,
        "sort-keys": 0,
    },
    "overrides": [
        {
            "files": "bin/**"